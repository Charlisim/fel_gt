<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="fel_report_invoice_document" inherit_id="account.report_invoice_document">
            
            <xpath expr="//div[@id='total']" position="after">
                <p>
                    Número de Autorización: <span t-field="o.firma_fel"/>
                    <br/>Serie Fel: <span t-field="o.serie_fel"/>
                    <br/>Número Fel: <span t-field="o.numero_fel"/>
                    <br/>Certificador: <span t-field="o.certificador_fel"/>
                </p>
            </xpath>
        </template>
        
        
        <template id="report_invoice" inherit_id="account.report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="fel_gt.fel_report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>
        
    </data>
</odoo>
